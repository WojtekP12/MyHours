<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Hours</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/fontawesome")
    <link href="~/Content/buttons.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">

                

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MyHours", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Home",routeValues: null)"><i class="fa fa-home"><font face="Arial">  Home</font></i></a></li>
                    @{
                        if (User.IsInRole("Teacher"))
                        {
                            <li><a href="@Url.Action("Index","Teacher",routeValues: null)"><i class="fa fa-briefcase"><font face="Arial">  Teacher Panel</font></i></a></li>
                        }
                    }
                    
                    @{
                        if (User.IsInRole("Administrator"))
                        {
                            <li><a href="@Url.Action("Index","Administrator",routeValues: null)"><i class="fa fa-key"><font face="Arial">  Administrator Panel</font></i></a></li>
                        }
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            @if (ViewBag.NotificationsCount != 0)
                            {
                                <a href="@Url.Action("Index","Notifications",routeValues: null)"><i class="fa fa-bell" style="font-size:20px; margin-top:1px"><span class="count">@ViewBag.NotificationCount</span></i></a>
                            }
                            else
                            {
                                <a href="@Url.Action("Index","Notifications",routeValues: null)"><i class="fa fa-bell" style="font-size:20px; margin-top:1px"><span class="count">&nbsp;</span></i></a>
                            }

                        </li>
                    }
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MyHours</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @* Add Jquery Library *@
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <script src="/signalr/hubs"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @* Add css *@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style type="text/css">
        /*Added css for design notification area, you can design by yur self*/
        .noti-content {
            position: fixed;
            right: 100px;
            background: #e5e5e5;
            border-radius: 4px;
            top: 47px;
            width: 250px;
            display: none;
            border: 1px solid #9E988B;
            font-family: Arial
        }

        ul#notiContent {
            max-height: 200px;
            overflow: auto;
            padding: 0px;
            margin: 0px;
            padding-left: 20px;
        }

            ul#notiContent li {
                margin: 3px;
                padding: 6px;
                background: #fff;
            }

        .noti-top-arrow {
            border-color: transparent;
            border-bottom-color: #F5DEB3;
            border-style: dashed dashed solid;
            border-width: 0 8.5px 8.5px;
            position: absolute;
            right: 32px;
            top: -8px;
        }

        span.noti {
            color: #999999;
            margin: 15px;
            position: fixed;
            /*right: 100px;*/
            font-size: 18px;
            cursor: pointer;
        }

        span.count {
            position: relative;
            font-family:Arial;
            font-size:14px;
            color:red;
            top:-5px;
        }
    </style>

    @* Add jquery code for Get Notification & setup signalr *@
    <script type="text/javascript">
        $(function () {
            // hide notifications
            $('html').click(function ()
            {
                $('.noti-content').hide();
            })


            // update notification
            function updateNotification()
            {
                $('#notiContent').empty();
                $('#notiContent').append($('<li>Loading...</li>'));

                $.ajax({
                    type: 'GET',
                    url: '/home/GetNotifications',
                    success: function (response)
                    {
                        $('#notiContent').empty();
                        if (response.length == 0)
                        {
                            $('#notiContent').append($('<li>No data available</li>'));
                        }
                        $.each(response, function (index, value)
                        {
                            $('#notiContent').append($('<li>New Notification : ' + value.Name + ' (' + value.Description + ') added</li>'));
                        });
                    },
                    error: function (error) {
                        console.log(error);
                    }
                })
            }


            // update notification count
            function increaseNotificationCount()
            {
                var count = 0;
                count = parseInt($('span.count').html()) || 0;
                count++;

                var val = { value: count };

                $.ajax({
                    url: '/Base/SetNotificationCount',
                    type: 'POST',
                    data: val
                });

                $('span.count').html(count);
            }

            function decreaseNotificationCount() {
                var count = 0;
                count = parseInt($('span.count').html()) || 0;
                count--;

                var val = { value: count };

                $.ajax({
                    url: '/Base/SetNotificationCount',
                    type: 'POST',
                    data: val
                });

                $('span.count').html(count);
            }


            // signalr js code for start hub and send receive notification
            var notificationHub = $.connection.notificationHub;
            $.connection.hub.start().done(function ()
            {
                console.log('Notification hub started');
            });


            //signalr method for push server message to client
            notificationHub.client.notify = function (message)
            {
                if (message && message.toLowerCase() == "added")
                {
                    increaseNotificationCount();
                }
                else if (message && message.toLowerCase() == "deleted")
                {
                    decreaseNotificationCount();
                }
            }

        })
    </script>


</body>
</html>
