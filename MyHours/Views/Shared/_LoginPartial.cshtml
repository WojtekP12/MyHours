@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("Index","Manage",routeValues: null)"><i class="fa fa-user"><font face="Arial">  Account</font></i></a>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"><font face="Arial">  Log off</font></i></a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("Login","Account",routeValues: null)"><i class="fa fa-sign-in"><font face="Arial">  Log in</font></i></a>
        </li>
    </ul>
}
