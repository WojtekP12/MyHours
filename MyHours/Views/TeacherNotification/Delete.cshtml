@model MyHours.Models.USER_NOTIFICATION

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Subject
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubjectName)
        </dd>

        <dt>
            Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            Status
        </dt>

        @if (Model.NOTIFICATION_STATUS.Description == "New")
        {
            <dd>
                <font color="blue"><b>@Html.DisplayFor(model => model.NOTIFICATION_STATUS.Description)</b></font>
            </dd>
        }
        else if (Model.NOTIFICATION_STATUS.Description == "Accepted")
        {
            <dd>
                <font color="green"><b>@Html.DisplayFor(model => model.NOTIFICATION_STATUS.Description)</b></font>
            </dd>
        }
        else
        {
            <dd>
                <font color="red"><b>@Html.DisplayFor(model => model.NOTIFICATION_STATUS.Description)</b></font>
            </dd>
        }
        

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="display:inline-block;">
            <input type="submit" value="Delete" class="btn btn-default" />
            <p style="width:50px;" />
            <p><a href="@Url.Action("Index","TeacherNotification",null)" class="btn btn-default">No</a></p>
        </div>
    }
</div>
