@model IEnumerable<MyHours.Models.USER_NOTIFICATION>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Notifications</h2>

<table class="table">
    <tr>
        <th>
            Sender
        </th>
        <th>
            Type
        </th>
        <th>
            Description
        </th>
        <th>
            Date
        </th>
        <th>
            Subject
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.USER.FirstName) @Html.DisplayFor(modelItem => item.USER.SecondName)
        </td>
        <td>
            @if(item.Name.Contains("added"))
            {
                <font color="green"><b>@Html.DisplayFor(modelItem => item.Name)</b></font>
            }
            else if (item.Name.Contains("deleted"))
            {
                <font color="red"><b>@Html.DisplayFor(modelItem => item.Name)</b></font>
            }
            else
            {
                <font color="blue"><b>@Html.DisplayFor(modelItem => item.Name)</b></font>
            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @if (item.Name.Contains("added"))
            {
                @Html.DisplayFor(modelItem => item.SUBJECT_ASSIGNMENT_TEMP.SUBJECT.Name)
            }
            else
            {
                @Html.DisplayFor(modelItem => item.SUBJECT_ASSIGNMENT.SUBJECT.Name)
            }
            
        </td>
        <td>
            <a href="@Url.Action("Accept","Notifications", new { id=item.ID })" class="btn btn-default"><i class="fa fa-check" style="color:darkseagreen"><font face="Arial"></font></i></a>
            <a href="@Url.Action("Delete","Notifications", new { id=item.ID })" class="btn btn-default"><i class="fa fa-times" style="color:red"><font face="Arial"></font></i></a>
            <a href="@Url.Action("Details","Notifications", new { id=item.ID })" class="btn btn-default"><i class="fa fa-bars"><font face="Arial"> Details</font></i></a>
        </td>
    </tr>
}

</table>
